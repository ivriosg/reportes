import 'package:flutter/material.dart';
import 'package:flutter_swiper/flutter_swiper.dart';

class MainNotes extends StatelessWidget {
  final List<dynamic> notas;

  MainNotes({@required this.notas});

  @override
  Widget build(BuildContext context) {
    //Ajustamos tama√±o
    final _screenSize = MediaQuery.of(context).size;

    return Container(
      padding: EdgeInsets.all(20),
      width: _screenSize.width * 1,
      height: _screenSize.height * 0.35,
      child: Swiper(
        itemBuilder: (BuildContext context, int index) {
          return ClipRRect(
            borderRadius: BorderRadius.circular(20),
            child: Image.network(
              "https://gq8ne3sd6ka12wvdz3ubnadf-wpengine.netdna-ssl.com/wp-content/uploads/2021/03/Disen%CC%83o-sin-ti%CC%81tulo-1-3.jpg",
              fit: BoxFit.cover,
            ),
          );
        },
        itemCount: notas.length,
        autoplay: true,
        duration: 500,
      ),
    );
  }
}
